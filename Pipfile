# details for the parameters below are as follows: 
#     `--branch` indicates to watch that all cases of a conditional are sensitized
#     `--source=.` calculate coverage only for files in this repository (aka: ignore code from packages)
#     `-m py.test` is the call to run the test suite
test = "coverage run --branch --source=. -m py.test"
